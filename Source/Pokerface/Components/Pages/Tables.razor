@page "/tables"


@inject TableService TableService

<PageTitle>Verfügbare Tische</PageTitle>

<h2>Verfügbare Tische</h2>

<br />
<a href="/editable/" class="btn btn-primary">Neuen Tisch erstellen</a>
<br />


@if (tables == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped table-hover align-middle w-auto">
        <thead>
            <tr>
                <th>Tischname</th>
                <th>Maximale Spieler</th>
                <th>Aktuelle Spieler</th>
                <th>Status</th>
                <th>Ein/Aus</th>
                <th>Bearbeiten</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var table in tables)
            {
                <tr>
                    <td>@table.Name</td>
                    <td>@table.MaxUsers</td>
                    <td>@table.CurrentUsers</td>
                    <td>
                        <input type="checkbox" checked="@table.IsActive" disabled />
                    </td>
                    <td>
                        <EditForm Enhance="true" Model="table" OnValidSubmit="@(() => TableOnOff(table))" FormName="@($"formToggle{table.Id}")">
                            <button type="submit" class="btn btn-sm btn-primary">
                                @(table.IsActive ? "Aus" : "Ein")
                            </button>
                        </EditForm>
                    </td>
                    <td>
                        <a href="@($"/editable/{table.Id}")" class="btn btn-sm btn-primary">Bearbeiten</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<TableModel>? tables;

    protected override async Task OnInitializedAsync()
    {
       tables = await TableService.GetTablesAsync();    
    }

    private async Task TableOnOff(TableModel model)
    {
        model.IsActive = !model.IsActive;

        await TableService.SaveTableAsync(model);

        // Refresh UI
        StateHasChanged();
    }



}
