@page "/tables"


@inject NavigationManager Nav
@inject TableService TableService

<PageTitle>Available Tables</PageTitle>

<div class="page-wrapper">
    <div class="header-wrapper">
        <h2 class="text-primary">Verfügbare Tische</h2>

        <div class="button-row">
            <a href="/" class="btn btn-primary">Zurück</a>
            <a href="/editable/" class="btn btn-primary">Neuen Tisch erstellen</a>
        </div>
    </div>

    <div class="table-container">
        @if (tables == null)
        {
            <p><em>Loading...</em></p>
        }
        else
        {
            <table class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th style="width: 20%;">Tischname</th>
                        <th style="width: 5%;" class="text-center">Maximale Spieler</th>
                        <th style="width: 5%;" class="text-center">Aktuelle Spieler</th>
                        <th style="width: 5%;" class="text-center">Status</th>
                        <th style="width: 5%;" class="text-center">Modus</th>
                        <th style="width: 5%;" class="text-center">Bearbeiten</th>
                        <th style="width: 5%;" class="text-center">Beitreten</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var table in tables)
                    {
                        <tr>
                            <td>@table.Name</td>
                            <td class="text-center">@table.MaxUsers</td>
                            <td class="text-center">@table.CurrentUsers</td>
                            <td class="text-center">
                                <input type="checkbox" checked="@table.IsActive" disabled />
                            </td>
                            <td class="text-center">
                                <EditForm Enhance="true" Model="table" OnValidSubmit="@(() => TableOnOff(table))" FormName="@($"formToggle{table.Id}")">
                                    <button type="submit" class="btn btn-sm btn-primary align-content-center" style="width:90px;">
                                        @(table.IsActive ? "Aus" : "Ein")
                                    </button>
                                </EditForm>
                            </td>
                            <td class="text-center">
                                <a href="@($"/editable/{table.Id}")" class="btn btn-sm btn-primary align-content-center" style="width:90px;">Bearbeiten</a>
                            </td>
                            <td class="text-center">
                                <button class="btn btn-sm @(table.IsActive ? "btn-primary" : "btn-secondary")"
                                        style="width:90px;"
                                        @onclick="() => JoinTable(table)">
                                    Join
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>



@code {
    private List<TableModel>? tables;

    protected override async Task OnInitializedAsync()
    {
        tables = await TableService.GetTablesAsync();
    }

    private async Task TableOnOff(TableModel model)
    {
        model.IsActive = !model.IsActive;

        await TableService.SaveTableAsync(model);

        // Refresh UI
        StateHasChanged();
    }

    private void JoinTable(TableModel table)
    {
        if (!table.IsActive)
            return; // do nothing if inactive

        Nav.NavigateTo($"/joingametable/{table.Id}");
    }




}
